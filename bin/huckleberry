#!/usr/bin/env ruby
require 'english'
require_relative '../lib/log_sifter'
require_relative '../lib/stdout_output_server'

if ARGV.first.nil?
  puts StdoutOutputServer.usage_output
elsif ARGV.first == "keywords"
  puts StdoutOutputServer.keywords_output
else
  LogSifter.new(logfile: ARGV.first, mode: ARGV[1] ||= "email").run_script
end
