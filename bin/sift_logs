#!/usr/bin/env ruby

require_relative '../lib/log_sifter'

def show_usage
  usage = <<-USAGE
  Usage: ./bin/sift_logs <relative_path_to_log>

      Will scan the given logfile, return relevant information
      and send an email with that relevant info.
      

  USAGE

  puts usage
end

if ARGV.first == nil
  show_usage
else
  LogSifter.new(ARGV.first)
end
